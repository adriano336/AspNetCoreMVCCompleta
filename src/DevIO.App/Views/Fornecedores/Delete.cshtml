@model DevIO.App.ViewModels.FornecedorViewModel  

@{
    ViewData["Title"] = $"Excluir {Model.Nome}";
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>

<h5>Você tem certeza disso?</h5>

<div class="row">    
    <div class="col-md-6">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Documento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Documento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoFornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoFornecedor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>            
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
    </form>
</div>

<partial name="_DetalhesEndereco" />
